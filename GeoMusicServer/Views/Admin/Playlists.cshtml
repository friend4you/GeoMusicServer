@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}
<div class="container">
    <div class="row">
        <div class="col-md-9 col-sm-8">
            <h1 class="page-header">
                Admin Panel
            </h1>

            @if (ViewBag.Playlists.Count != 0)
            {
                <table>
                    <tr>
                        <th>
                            Название
                        </th>
                        <th>
                            Автор
                        </th>
                        <th style="width:200px;">
                            Описание
                        </th>
                        <th>
                            Категория
                        </th>
                        <th>
                            Подписчиков
                        </th>
                        <th>

                        </th>
                    </tr>
                    @foreach (var playlist in ViewBag.Playlists)
                {
                        <tr>
                            <td>
                                @playlist.Title    |
                            </td>
                            <td>
                                @playlist.Author      |
                            </td>
                            <td>
                                @playlist.Description      |
                            </td>
                            <td>
                                @playlist.Author      |
                            </td>
                            <td>
                                @Html.ActionLink("Редактировании", "Edit", new { id = playlist.Id }) |
                                @Html.ActionLink("Удалить", "Delete", new { id = playlist.Id })
                            </td>
                        </tr>
                    }
                </table>
            }
            else
            {
                @Html.ActionLink("Добавить плейлист", "CreatePlaylist", "Api")
            }

        </div>
    </div>
    <!-- /.row -->
</div>